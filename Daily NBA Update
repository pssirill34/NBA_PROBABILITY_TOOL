name: Daily NBA Data Update
on:
  schedule:
    - cron: '0 8 * * *' # Runs at 8:00 AM UTC daily
  workflow_dispatch: # Allows manual trigger button

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write # Essential: Allows the bot to save the new CSV

    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      - name: Install Dependencies
        run: |
          pip install requests pandas numpy
      - name: Run Data Script
        env:
          API_KEY: ${{ secrets.BALLDONTLIE_API_KEY }} # Add this in Repo Settings -> Secrets
        run: python generate_master_feed.py
      - name: Commit and Push Data
        run: |
          git config --global user.name "GitHub Action"
          git config --global user.email "action@github.com"
          git add nba_master_data/
          git commit -m "Daily Data Refresh" || echo "No changes to commit"
          git push
